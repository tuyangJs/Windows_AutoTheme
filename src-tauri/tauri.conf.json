{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WindowsThemeAuto",
  "version": "1.3.5",
  "identifier": "com.WindowsThemeAuto.cn",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "系统主题自适应",
        "label": "main",
        "windowEffects": {
          "color": "#00000000",
          "effects": [
            "acrylic"
          ]
        },
        "transparent": true,
        "center": true,
        "visible": false,
        "decorations": false,
        "visibleOnAllWorkspaces":false,
        "maximized": false,
        "resizable": true,
        "maxHeight": 736,
        "maxWidth": 500,
        "minHeight": 572,
        "minWidth": 382,
        "width": 382,
        "height": 572
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "autostart": null
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "copyright": "Copyright © 2025 Tuyang All",
    "windows": {
      "nsis": {
        "languages":["SimpChinese", "TradChinese", "English", "Spanish", "Japanese"],
        "displayLanguageSelector": true
      }
    },
    "icon": [
      "icons/logo.png"
    ]
  }
}