{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AutoThemeMode",
  "identifier": "com.AutoThemeMode.cn",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "系统主题自适应",
        "label": "main",
        "windowEffects": {
          "color": "#00000000",
          "effects": []
        },
        "shadow": false,
        "decorations": false,
        "visible": false,
        "visibleOnAllWorkspaces": false,
        "focus": false,
        "alwaysOnTop": true,
        "transparent": true,
        "center": true,
        "maximizable": false,
        "dragDropEnabled": false,
        "maximized": false,
        "resizable": true,
        "maxHeight": 736,
        "maxWidth": 500,
        "minHeight": 572,
        "minWidth": 320,
        "width": 382,
        "height": 572
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "autostart": null
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "copyright": "Copyright © 2025 Tuyang All",
    "homepage": "https://github.com/tuyangJs/Windows_AutoTheme",
    "windows": {
      "nsis": {
        "languages": [
          "SimpChinese",
          "TradChinese",
          "English",
          "Spanish",
          "Japanese"
        ],
        "headerImage": "img/header.bmp",
        "installerIcon": "icons/installer.ico",
        "sidebarImage": "img/sidebar.bmp",
        "installMode": "both",
        "displayLanguageSelector": true
      },
      "webviewInstallMode": {
        "type": "offlineInstaller"
      }
    },
    "icon": [
      "icons/icon.png"
    ],
    "resources": []
  }
}